/**index.wxss**/

.background-container {
  position: relative;
  width: 100%;
  height: 100vh; 
}

.page-title {
  position: absolute;
  top: 50px; 
  left: 20px;
  width: 100%;
  font-size: 24px; 
  color: white; 
  font-weight: bold;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5); 
}

.background-image {
  width: 100%;
  height: 100%;
}

.camera-button {
  position: absolute;
  bottom: 400px; 
  left: 70%;
  transform: translateX(-50%);
  width: 80px; 
  height: 80px; 
}